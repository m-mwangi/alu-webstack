frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/live/www.allmarion.tech/www.allmarion.tech.pem
    http-request add-header X-Forwaded-Proto http
    http-request redirect scheme https if !{ ssl_fc }
    use_backend http_back

backend http_back
    redirect scheme https unless { ssl_fc }
    server 5889-web-01 54.91.127.208:80 check
    server 5889-web-02 54.87.90.200:80 check
